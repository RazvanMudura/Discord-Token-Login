{
    "manifest_version": 3,
  
    "name": "Discord Token Login",
    "description": "Discord login based on token",
    "version": "1.0.0",

    "icons": {
      "128": "icons/discord.png"
    },
  
    "permissions": [
      "scripting", "storage"
    ],

    "host_permissions": [
      "<all_urls>"
    ],

    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "64": "icons/discord.png"
      }
    }
}